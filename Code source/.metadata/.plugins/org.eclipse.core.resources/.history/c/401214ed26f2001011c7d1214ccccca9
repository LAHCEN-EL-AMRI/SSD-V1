	/* ==================================================
	   CALCUL STATISTIQUE COMPLET
	   ================================================== */
	private void computeStatistics() {

	    int rows = tableModel.getRowCount();
	    int N = 0;
	    double sum = 0.0;
	    double sumSq = 0.0;

	    for (int i = 0; i < rows; i++) {
	        Object val = tableModel.getValueAt(i, 1); // colonne N
	        if (val != null && !val.toString().trim().isEmpty()) {
	            try {
	                double x = Double.parseDouble(val.toString());
	                N++;
	                sum += x;
	                sumSq += x * x;
	            } catch (NumberFormatException ex) {
	                // ignorer valeurs invalides
	            }
	        }
	    }

	    if (N == 0) {
	        JOptionPane.showMessageDialog(this, "No valid N values found.");
	        return;
	    }

	    double mean = sum / N;
	    double sigmaTheo = Math.sqrt(mean);
	    double sigmaExp = Math.sqrt((sumSq / N) - (mean * mean));

	    textField_1.setText(String.valueOf(N));
	    textField_2.setText(String.format("%.2f", mean));
	    textField_3.setText(String.format("%.2f", sigmaTheo));
	    textField_4.setText(String.format("%.2f", sigmaExp));
	}
//----------------------------------------------------------------------
	private void buildIntervals() {
	    double L;
	    try {
	        L = Double.parseDouble(textField.getText());
	        if (L <= 0) throw new NumberFormatException();
	    } catch (NumberFormatException e) {
	        JOptionPane.showMessageDialog(this,
	                "Invalid group width value.",
	                "Error",
	                JOptionPane.ERROR_MESSAGE);
	        return;
	    }

	    Interval interval = new Interval(tableModel, tableModel2, L);
	    interval.setTextField5(textField_5); // pour afficher P(N+1) en %
	}
}
