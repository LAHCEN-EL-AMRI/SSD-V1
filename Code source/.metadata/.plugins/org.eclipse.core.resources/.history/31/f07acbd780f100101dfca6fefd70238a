import javax.swing.table.DefaultTableModel;
import java.util.ArrayList;
import java.util.Collections;

public class Interval {

    private DefaultTableModel sourceModel;   // table 1 (N)
    private DefaultTableModel targetModel;   // table 2
    private double L;                        // group width

    public Interval(DefaultTableModel sourceModel,
                    DefaultTableModel targetModel,
                    double groupWidth) {

        this.sourceModel = sourceModel;
        this.targetModel = targetModel;
        this.L = groupWidth;

        buildAndCompute();
    }

    private void buildAndCompute() {

        ArrayList<Double> values = new ArrayList<>();

        // Lire les valeurs N
        for (int i = 0; i < sourceModel.getRowCount(); i++) {
            Object val = sourceModel.getValueAt(i, 1);
            if (val != null && !val.toString().trim().isEmpty()) {
                try {
                    values.add(Double.parseDouble(val.toString()));
                } catch (NumberFormatException ignored) {}
            }
        }

        if (values.isEmpty()) return;

        Collections.sort(values);

        int N = values.size(); // nombre total de valeurs
        double sum = 0.0;
        for (double v : values) sum += v;
        double mean = sum / N; // moyenne

        double min = values.get(0);
        double max = values.get(values.size() - 1);

        // Nettoyage table 2
        for (int i = 0; i < targetModel.getRowCount(); i++) {
            for (int j = 0; j < targetModel.getColumnCount(); j++) {
                targetModel.setValueAt("", i, j);
            }
        }

        int row = 0;
        double a = min;

        while (a < max && row < targetModel.getRowCount()) {

            double b = a + L;

            // Interval
            String intervalTxt = String.format("[%.2f, %.2f[", a, b);

            // Xi
            double Xi = (a + b) / 2.0;

            // ni = nombre de valeurs dans l'intervalle
            int ni = 0;
            for (double v : values) {
                if (v >= a && v < b) ni++;
            }

            // P(Xi) (loi normale)
            double Pxi = (1.0 / Math.sqrt(2 * Math.PI * mean))
                    * Math.exp(-(Math.pow(Xi - mean, 2)) / (2 * mean));

            // N·l·P(Xi)
            double NlP = N * L * Pxi;

            // Remplissage table
            targetModel.setValueAt(intervalTxt, row, 0);
            targetModel.setValueAt(String.format("%.2f", Xi), row, 1);
            targetModel.setValueAt(ni, row, 2); // <-- F(Xi) = ni
            targetModel.setValueAt(String.format("%.6f", Pxi), row, 3);
            targetModel.setValueAt(String.format("%.2f", NlP), row, 4);

            a = b;
            row++;
        }
    }
}
